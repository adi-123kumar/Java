package Lab1.PostLab;



public class MyIntegerMath {
  public static long factorial(int num){
        int fact =1;
        for(int i=num;i>0;i--){
            fact *=i;
        }
        return fact;
    }
 public  static boolean isStrong(int num){
        int temp =num;
        int sum=0;
        while(temp>0){
            int rem = temp%10;
            sum+= factorial(rem);
            temp =temp/10;

        }
        if(num==sum){
            return true;
        }
        return false;
    }
   public static int countDigit(int num)
    {
        int count =0;
        while (num > 0) {
            num =num/10;
            count++;
        }
        return count;
    }
   public static boolean isArmstrong(int num){
        int length = countDigit(num);
        int temp = num;
        int sum =0;
        while(num>0){
            int rem= num%10;
            sum+=Math.pow(rem,length);
            num=num/10;
        }
        if(temp==sum){
            return true;
        }
        return false;
    }
}

